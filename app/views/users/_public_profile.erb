  <tr>
    <td width="100px">  <%= image_tag @user.picture_url, :size => "100x100" %> </td>
    <td>
      <p>
        <b>Name:</b>
        <%= @user.name %>
      </p>

      <p>
        <b>Email:</b>
        <%= @user.email %>
      </p>


      <p>
        <b>Admin:</b>
        <%= @user.admin %>
        <b>Developer:</b>     
        <%= @user.developer %>
