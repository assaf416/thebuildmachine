
<table class="table">
  <% for user in User.limit(rand(5)) do   %>
    <tr>
      <td width="50px"> <%= image_tag(user.picture_url , :size => "50x50") %> </td>
      <td>
        <div class="users_on_sidebar">
        <div class="user-name"><%= link_to user.name , user%></div>
        <p class="user-commands"><%= link_to "text" %> | <%= link_to "call" %> </p>
        </div>
      </td>
    </tr>
  <% end %>
</table>

