  .users_on_sidebar{
    
  }
  
  .users_on_sidebar .user-name{
    font-size: 12px;
    font-weight: bolder;
    line-height: 14px;
    color:#006400;
    
  }
  .users_on_sidebar .user-commands{
    font-size: 10px;
