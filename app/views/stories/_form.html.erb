<%= simple_form_for(@story) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :project_id %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :functional_test %>
    <%= f.input :status %>
    <%= f.input :created_by_user_id %>
    <%= f.input :primary_solver_user_id %>
    <%= f.input :secondary_solver_user_id %>
    <%= f.input :tested_by_user_id %>
    <%= f.input :iteration_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
