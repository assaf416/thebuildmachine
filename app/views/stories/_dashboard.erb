<div class="row">
  <div class="btn-group">
    <button class="btn">Test</button>
    <% if current_user.developer? %>
      <button class="btn">Estimate</button>
      <button class="btn">Assign</button>
    <% end  %>
    <% if current_user.customer? %>
      <button class="btn">Change</button>
      <button class="btn">Approve</button>
      <button class="btn">Take out </button>
    <% end %>
  </div>

</div>

<div class="row">
  <table class="table">
    <tr>
      <td width="30%"><b>Priority</b> </td>
      <td> <%= "High" %> </td>
      <td>
        <div class="btn-group">
          <button class="btn btn-success">Low</button>
          <button class="btn btn-info">Medium</button>
          <button class="btn btn-danger">High</button>
        </div>
      </td>
    </tr>
    <tr>
      <td width="30%"><b>Status:</b> </td>
      <td> <%= @story.status %> </td>
      <td></td>
    </tr>
    <tr>
      <td width="30%"><b>Solved by</b> </td>
      <td> <%= fake_name(["Assaf","idan"]) %> </td>
      <td></td>
    </tr>
    <tr>
      <td width="30%"><b>Approved</b> </td>
      <td> <%= time_ago_in_words(Time.now - rand(1000)) %> </td>
      <td> By: <%= User.first.name   %></td>
    </tr>
    <tr>
      <td width="30%"><b>Estimation:</b> </td>
      <td> <%= @story.estimation %> points </td>
      <td><%= link_to "Actual Time"%> </td>
    </tr>
  </table>
  <hr/>
</div>