<% @task = Task.new %>
<%= simple_form_for(@task) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <table class="table">
      <tr>
        <td width="70%">
          <textarea style="width:450px;height:80px;"><%= @task.description %></textarea>
        </td>
        <td width="30%">
          <%= f.input :estimation, :collection => ["0","1 Unit","2 Units","3 Units", "Spkie"] %>
          <%= f.button :submit %>
        </td>
      </tr>
    </table>
  </div>

<% end %>