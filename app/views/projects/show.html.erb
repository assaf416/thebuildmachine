<div class="well">
  <table class="table">
    <tr>
      <td width="100px"><%= image_tag @project.profile_image_url , :size => "100x100" %></td>
      <td>
        <b>Project: <%= @project.name %></b><br/>
        <%= lorem(23) %><%= @project.description %><br/>
      </td>
      <td width="120px">
        <%= raw(fake_story_status_bar(rand(99)))%>
      </td>
    </tr>
    <tr>
      <td width="100px"></td>
      <td colspan="2">
        Actions:  
        <a href="#addStoryForm" role="button" class="xbtn" data-toggle="modal"><i class="icon-quote-right"></i> Add story</a> |
        <%= link_to raw("<i class='icon-calendar'></i>  Setup Meeting") , "" %> |
        <a href="#addQuestionForm" role="button" class="xbtn" data-toggle="modal"><i class="icon-question-sign"></i> Ask Question</a> |
        <%= link_to raw("<i class='icon-bookmark'></i>  Add Bookmark") , "" %>
      </td>
    </tr>
  </table>



  <%= render "add_story_form" %>
  <%= render "add_question_form" %>
</div>


<hr/>
<h5>Stories in development </h5>
<%= render "shared/fake_stories" %>


<%= render "project_status" if @view.include? "dash" %>
<%= render "calendar" if @view.include? "calendar" %>



<% if @view.include? "stories" %>
  <h2>Project Stories</h2>
  <%= render :partial => "stories", :locals => {:stories => @project.stories} %>
<% end %>

<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>

<%= render "sidebar"  %>