<%= simple_form_for(@meeting) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :project_id %>
    <%= f.input :user_id %>
    <%= f.input :kind %>
    <%= f.input :title %>
    <%= f.input :body %>
    <%= f.input :location %>
    <%= f.input :related_stories %>
    <%= f.input :related_users %>
    <%= f.input :starts_at %>
    <%= f.input :starts_on %>
    <%= f.input :ends_at %>
    <%= f.input :meeting_notes %>
    <%= f.input :invited_user_names %>
    <%= f.input :approved_user_names %>
    <%= f.input :denided_user_names %>
    <%= f.input :cost %>
    <%= f.input :billable %>
    <%= f.input :private %>
    <%= f.input :meeting_type_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
