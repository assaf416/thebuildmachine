<h1>Listing todos</h1>

<table>
  <tr>
    <th>Project</th>
    <th>Iteration</th>
    <th>Description</th>
    <th>Solution</th>
    <th>Green</th>
    <th>Owner user</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @todos.each do |todo| %>
  <tr>
    <td><%= todo.project_id %></td>
    <td><%= todo.iteration_id %></td>
    <td><%= todo.description %></td>
    <td><%= todo.solution %></td>
    <td><%= todo.green %></td>
    <td><%= todo.owner_user_id %></td>
    <td><%= todo.status %></td>
    <td><%= link_to 'Show', todo %></td>
    <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
    <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

